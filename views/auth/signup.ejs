        <script>
            var check = function () {
                if (document.getElementById('contrasena').value ==
                    document.getElementById('contrasena2').value && document.getElementById('contrasena').value != ''
                    && document.getElementById('contrasena2').value != '') {
                    document.getElementById('message').style.color = 'green';
                    document.getElementById('message').innerHTML = 'Coinciden las contraseñas, de click en siguiente';
                    document.getElementById("btn_siguiente").disabled = false;
                } else {
                    document.getElementById('message').style.color = 'red';
                    document.getElementById('message').innerHTML = 'Contraseñas no coinciden, operación bloqueada';
                    document.getElementById("btn_siguiente").disabled = true;
                }
            }
        </script>

