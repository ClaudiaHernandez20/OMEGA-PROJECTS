    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block text-center mt-auto mb-auto">
                        <img class="img-fluid" src="img/LOGO-COMPLETO.jpg" alt="...">
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Registro de nuevo usuario</h1>
                            </div>
                            <form class="user" action="/signup" method="POST">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Nombre y Apellido" name="nom_usuario" required>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="exampleFirstName"
                                            placeholder="Área de pertenencia" name="area_pertenencia" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="exampleLastName"
                                            placeholder="Tipo de usuario" name="tipo_usuario" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Dirección de correo electrónico" name="correo" aria-describedby="emailHelp"
                                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="tel" class="form-control form-control-user" id="exampleFirstName"
                                            placeholder="Teléfono" name="TEL_USUARIO" maxlength="10" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="exampleLastName"
                                            placeholder="Horario" name="HOR_USUARIO" required>
                                    </div>
                                </div>
                                <!--  <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Contraseña" name="contrasena"
                                            onkeyup='check();' required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                            id="exampleRepeatPassword" placeholder="Repetir Contraseña"
                                            name="contrasena2" onkeyup='check();' required>
                                    </div>
                                </div>-->

                                <button name="btn_siguiente" class="btn btn-primary btn-user btn-block"
                                    data-toggle="modal" data-target="#exampleModal">
                                    <i class="fab fa-fw"></i>
                                    Registrar usuario
                                </button>
                                <hr>
                                <a class="btn btn-google btn-user btn-block" href="/inicio" data-toggle="modal"
                                    data-target="#logoutModal">
                                    <i class="fab fa-fw"></i>
                                    Volver al Tablero
                                </a>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Registro completado</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">El usuario se ha registrado satisfactoriamente. <br><br> Todos los cambios
                        han sido guardados.</div>
                    <div class="modal-footer">
                        <button class="btn btn-success" type="button" data-dismiss="modal">Aceptar</button>
                    </div>
                </div>
            </div>
        </div>
